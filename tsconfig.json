{
  "compilerOptions": {
    /* 기본 옵션 */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* 출력 설정 */
    "outDir": "./dist",
    "rootDir": "./src",

    /* 타입 체크 */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    /* 모듈 해석 */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* 추가 옵션 */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* 소스맵 */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* JSDoc 지원 */
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
