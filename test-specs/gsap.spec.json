{
  "version": "1.0.0",
  "metadata": {
    "title": "GSAP Animation Assertions Test Suite",
    "description": "Comprehensive tests for GSAP animation state validation",
    "author": "GSAP Kit",
    "tags": [
      "gsap",
      "animation",
      "assertions"
    ]
  },
  "config": {
    "visualizationEnabled": false,
    "slowMotion": false
  },
  "suites": [
    {
      "name": "Fade Animation Tests",
      "description": "Testing opacity property validation",
      "beforeEach": {
        "executeFunction": "gsapTest.resetAllAnimations",
        "waitTime": 500
      },
      "tests": [
        {
          "name": "Fade box starts with opacity 0",
          "type": "click",
          "simulation": {
            "from": "#fade-trigger",
            "duration": 100
          },
          "delay": 100,
          "assert": {
            "type": "gsap-property-value",
            "selector": ".fade-box",
            "property": "opacity",
            "expected": 0,
            "tolerance": 0.01
          }
        },
        {
          "name": "Fade box animates to opacity 1",
          "type": "click",
          "simulation": {
            "from": "#fade-trigger",
            "duration": 100
          },
          "setup": {
            "executeFunction": "gsapTest.triggerFadeAnimation"
          },
          "assert": {
            "type": "gsap-property-value",
            "selector": ".fade-box",
            "property": "opacity",
            "expected": 1,
            "tolerance": 0.1,
            "waitForAnimation": true,
            "timeout": 2000
          }
        },
        {
          "name": "Fade animation is active during transition",
          "type": "click",
          "simulation": {
            "from": "#fade-trigger",
            "duration": 100
          },
          "setup": {
            "executeFunction": "gsapTest.triggerFadeAnimation"
          },
          "delay": 200,
          "assert": {
            "type": "gsap-is-animating",
            "selector": ".fade-box"
          }
        }
      ]
    },
    {
      "name": "Slide Animation Tests",
      "description": "Testing transform X property validation",
      "beforeEach": {
        "executeFunction": "gsapTest.resetAllAnimations",
        "waitTime": 500
      },
      "tests": [
        {
          "name": "Slide box starts at x: 0",
          "type": "click",
          "simulation": {
            "from": "#slide-trigger",
            "duration": 100
          },
          "assert": {
            "type": "gsap-transform",
            "selector": ".slide-box",
            "transformProperty": "x",
            "expected": 0,
            "tolerance": 1,
            "checkBeforeInteraction": true
          }
        },
        {
          "name": "Slide box moves to x: 200",
          "type": "click",
          "simulation": {
            "from": "#slide-trigger",
            "duration": 100
          },
          "setup": {
            "executeFunction": "gsapTest.triggerSlideAnimation"
          },
          "assert": {
            "type": "gsap-transform",
            "selector": ".slide-box",
            "transformProperty": "x",
            "expected": 200,
            "tolerance": 5,
            "waitForAnimation": true,
            "timeout": 2000
          }
        },
        {
          "name": "Slide animation is active",
          "type": "click",
          "simulation": {
            "from": "#slide-trigger",
            "duration": 100
          },
          "setup": {
            "executeFunction": "gsapTest.triggerSlideAnimation"
          },
          "delay": 300,
          "assert": {
            "type": "gsap-is-animating",
            "selector": ".slide-box"
          }
        }
      ]
    },
